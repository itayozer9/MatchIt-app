<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MultiPlayer">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/ll_score">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/ll_left"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/game_profilepic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="8dp"

                />
            <TextView
                android:layout_width="60dp"
                android:padding="3dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/Black"
                android:background="@drawable/score_background"
                android:shadowColor="@color/Gray"
                android:textAlignment="center"
                android:textSize="22dp"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="5"
                android:id="@+id/tv_score_home"/>
        </LinearLayout>

        <ImageView
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:id="@+id/iv_arrow"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ll_left"
            android:src="@drawable/arrow"/>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_toRightOf="@id/iv_arrow"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@drawable/guest1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="8dp"

                />

            <TextView
                android:layout_width="60dp"
                android:padding="3dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/Black"
                android:background="@drawable/score_background"
                android:shadowColor="@color/Gray"
                android:textAlignment="center"
                android:textSize="22dp"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="5"
                android:id="@+id/tv_score_guest"/>
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_score"
        android:layout_marginTop="8dp"
        android:gravity="center">

        <GridView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="auto_fit"
            android:id="@+id/gv_game"
            android:verticalSpacing="6dp"
            android:horizontalSpacing="0dp"
            android:stretchMode="columnWidth"
            android:gravity="center">
        </GridView>
    </LinearLayout>
    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/viewKonfetti_multiplayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>